<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlain"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lora_bold"
        android:gravity="center"
        android:text="Penjelasan"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:paddingTop="4dp"
        android:background="@drawable/pengertianrounded"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:fontFamily="@font/karla_bold"
            android:text="Pengertian"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/musik_penjelasan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorbtn"
            android:src="@drawable/ic_play" />
    </LinearLayout>


    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/pengertianrounded"
        android:fontFamily="@font/karla"
        android:text="Isyarat adalah semboyan yang disampaikan oleh pengatur perjalanan kereta api atau petugas atau pihak lain dalam bentuk peragaan, bunyi, atau alat tertentu."
        android:textSize="16sp" />


</LinearLayout>